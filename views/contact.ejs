  <!-- menampilkan contact list -->
    <div class="container">
        <h1>Hello to Contact Page</h1>
        <a href="/contact/add" class="btn btn-primary mb-3"><i class="bi bi-person-plus-fill"></i> Add contact</a>
        <h3><i class="bi bi-person-lines-fill"></i> Contact List</h3>
        <div class="row">
            <div class="col">

                <!-- menampilkan pesan -->
                <% if (msg.length !== 0) { %>
                    <div class="alert alert-success" role="alert"> <%= msg %> </div>
                <% } %>

                <% if (msg2.length !== 0) { %>
                    <div class="alert alert-warning" role="alert"> <%= msg2 %> </div>
                <% } %>

                <table class="table table-striped table-hover  mt-3">
                    <thead class="table-primary">
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (cont.length == 0) { %>
                            <tr><td colspan="3"><b>Contact masih kosong</b></td></tr>
                        <% }else{ %>  
                            <% cont.forEach( (con,index) => { %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%= con.name %> </td>
                                    <td><%= con.email %> </td>                    
                                    <td>
                                        <a href="/contact/<%= con.name %>">
                                            <span class="badge rounded-pill text-bg-success">detail</span>   
                                        </a>
                                        <a href="/contact/edit/<%= con.name %>">
                                            <span class="badge rounded-pill text-bg-primary">edit</span>   
                                        </a>
                                        <a href="/contact/delete/<%= con.name %>">
                                            <span class="badge rounded-pill text-bg-danger" onclick="return confirm('yakin?');">hapus</span>   
                                        </a>
                                    </td>                    
                                </tr>
                            <% }) %>
                        <% } %> 
                    </tbody>
                </table>
                   
            </div>
        </div>
    </div>

